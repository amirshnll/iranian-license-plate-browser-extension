{
    "manifest_version": 3,
    "name": "Iranian License Plate Finder",
    "version": "1.0.0",
    "description": "A tool to identify the city and province of Iranian vehicle license plates",
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png",
        "512": "icons/icon512.png"
    },
    "permissions": [],
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html",
        "default_title": "iranian-license-plate-finder"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "iranian-license-plate-finder@ashokri.com",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mozilla.org/*"
            ],
            "js": [
                "popup.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ]
}